<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/fondo"
    tools:context="com.example.a18franciscorm.loginrelative.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/funcion"
        android:textSize="24dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:gravity="left"
        android:paddingBottom="@dimen/paddingVertical"
        android:paddingLeft="@dimen/paddingHorizontal"
        android:paddingRight="@dimen/paddingHorizontal"
        android:layout_margin="@dimen/paddingVertical"
        />
    <EditText
        android:layout_width="@dimen/anchoCredenciais"
        android:layout_height="wrap_content"
        android:hint="@string/user"
        android:layout_gravity="center_horizontal"
        android:inputType="textCapSentences"
        />
    <EditText
        android:layout_width="@dimen/anchoCredenciais"
        android:layout_height="wrap_content"
        android:hint="@string/pass"
        android:layout_gravity="center_horizontal"
        android:password="true"/>
    <Button
        android:paddingBottom="@dimen/paddingVertical"
        android:paddingTop="@dimen/paddingVertical"
        android:paddingLeft="@dimen/paddingHorizontal"
        android:paddingRight="@dimen/paddingHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/boton"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/olvido"
        android:textSize="@dimen/letraPequena"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>
