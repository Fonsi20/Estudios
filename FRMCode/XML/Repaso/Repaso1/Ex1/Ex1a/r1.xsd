<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
    <xs:element name="articulo">
    <xs:complexType>
    <xs:attribute name="codigo">
    <xs:simpleType>
        <xs:restriction>
            <xs:pattern value="[a-z]\-[0-9]{4}"/>
        </xs:restriction>
    </xs:simpleType>
    </xs:attribute>
    </xs:complexType>
    </xs:element>
</xs:schema>