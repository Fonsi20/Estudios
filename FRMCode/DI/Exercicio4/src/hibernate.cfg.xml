<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/libreria/mysql?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <mapping class="Obx.MapeaAutores" file="" jar="" package="" resource="portamapas/MapeaAutores.hbm.xml"/>
    <mapping class="Obx.MapeaAutores" file="" jar="" package="" resource="portamapas/MapeaLibros.hbm.xml"/>    
    <mapping class="Obx.MapeaTelefonos" file="" jar="" package="" resource="portamapas/MapeaTelefonos.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
